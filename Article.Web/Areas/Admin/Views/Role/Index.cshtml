@model List<RoleDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Rol Yönetimi /</span> Roller
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Role" asp-action="Add">
                Rol Ekle <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Rol Adı</th>
                        <th>Normalleştirilmiş Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Rol Adı</th>
                        <th>Normalleştirilmiş Adı</th>
                        <th>İşlemler</th>

                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var role in Model)
                    {
                        <tr name="@role.Id">
                            <td>@role.Name</td>
                            <td>@role.NormalizedName</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@role.Id" asp-area="Admin" asp-controller="Role" asp-action="Update" asp-route-roleId="@role.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@role.Id" asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-roleId="@role.Id"><i class="bx bx-minus-circle"></i></a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->


</div>

@section Scripts {
    <script src="~/js/roleIndex.js" type="application/ecmascript"></script>
}
