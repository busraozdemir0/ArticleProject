@model UserAddDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Kullanıcı ismi</label>
                            <input asp-for="FirstName" type="text"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen kullanıcının ismini giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Kullanıcı soyismi</label>
                            <input asp-for="LastName" type="text"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen kullanıcının soyismini giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen kullanıcının emailini giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen kullanıcının telefon numarasını giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleId" class="form-label">Kullanıcının Rolü</label>
                           <select  asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Parola</label>
                            <input asp-for="Password" type="password"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"  
                                   aria-describedby="defaultFormControlHelp" />  @* &#xb7; => parola inputunda silik bir sekilde noktalar gozukturmek icin *@
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>