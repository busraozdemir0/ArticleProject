@model SocialMediaUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sosyal Medya Yönetimi /</span> Güncelle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="SocialMedia" asp-action="Update" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="GmailUrl" class="form-label">Gmail URL</label>
                            <input asp-for="GmailUrl" type="text"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen başlık giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="GmailUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="GithubUrl" class="form-label">GitHub URL</label>
                            <input asp-for="GithubUrl" type="text"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen başlık giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="GithubUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TwitterUrl" class="form-label">Twitter URL</label>
                            <input asp-for="TwitterUrl" type="text"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen başlık giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LinkedinUrl" class="form-label">Linkedin URL</label>
                            <input asp-for="LinkedinUrl" type="text"
                                   class="form-control mb-3"
                                   id="defaultFormControlInput"
                                   placeholder="Lütfen başlık giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="LinkedinUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="InstagramUrl" class="form-label">Instagram URL</label>
                            <input asp-for="InstagramUrl" type="text"
                                      class="form-control mb-3"
                                      id="defaultFormControlInput"
                                      placeholder="Makale içeriği..."
                                      aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>